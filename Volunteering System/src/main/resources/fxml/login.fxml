<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane hgap="10" vgap="10" alignment="CENTER" stylesheets="@../css/app.css" xmlns:fx="http://javafx.com/fxml" fx:controller="app.controllers.LoginController">
<columnConstraints>
<ColumnConstraints halignment="RIGHT"/>
<ColumnConstraints halignment="LEFT"/>
</columnConstraints>
<Label text="Login" styleClass="h1" GridPane.columnSpan="2"/>
<Label text="User ID:" GridPane.rowIndex="1"/>
<TextField fx:id="tfUserid" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
<Label text="Password:" GridPane.rowIndex="2"/>
<PasswordField fx:id="pfPassword" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
<Label text="Role:" GridPane.rowIndex="3"/>
<ChoiceBox fx:id="cbRole" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
<Button text="Login" onAction="#onLogin" GridPane.rowIndex="4" GridPane.columnSpan="2" maxWidth="Infinity"/>
<Label fx:id="lblMsg" GridPane.rowIndex="5" GridPane.columnSpan="2"/>
<Hyperlink text="New here? Register" onAction="#goToRegister" GridPane.rowIndex="6" GridPane.columnSpan="2"/>
</GridPane>