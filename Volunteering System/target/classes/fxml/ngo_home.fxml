<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox spacing="8" xmlns:fx="http://javafx.com/fxml" fx:controller="app.controllers.NGOHomeController" stylesheets="@../css/app.css">
<children>
<Label fx:id="lblHeader" styleClass="h1"/>
<Button text="Logout" onAction="#onLogout" alignment="CENTER_RIGHT"/>
<HBox spacing="6">
<TextField fx:id="tfEventName" promptText="Event Name"/>
<DatePicker fx:id="dpDate"/>
<TextField fx:id="tfLocation" promptText="Location"/>
<TextField fx:id="tfMaxVolunteers" promptText="Max Volunteers"/>
<Button text="Add Event" onAction="#addEvent"/>
</HBox>
<Label fx:id="lblMsg"/>
<TableView fx:id="table">
<columns>
<TableColumn fx:id="colRemaining" text="Remaining Slots" prefWidth="150"/>
<TableColumn fx:id="colName" text="Event" prefWidth="150"/>
<TableColumn fx:id="colDate" text="Date" prefWidth="120"/>
<TableColumn fx:id="colLoc" text="Location" prefWidth="150"/>
<TableColumn fx:id="colVolunteer" text="Volunteer" prefWidth="150"/>
</columns>
</TableView>
</children>
</VBox>